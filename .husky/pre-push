#!/bin/sh

echo "ğŸš€ Running pre-push checks (this may take a minute)..."
echo ""

# Track if any check fails
FAILED=0

# 1. Run ESLint
echo "ğŸ“ Running lint..."
pnpm run lint
if [ $? -ne 0 ]; then
    echo "âŒ Lint failed!"
    FAILED=1
else
    echo "âœ… Lint passed"
fi
echo ""

# 2. Run TypeScript check
echo "ğŸ”· Running TypeScript check..."
pnpm run typecheck
if [ $? -ne 0 ]; then
    echo "âŒ TypeScript check failed!"
    FAILED=1
else
    echo "âœ… TypeScript check passed"
fi
echo ""

# 3. Run unit tests
echo "ğŸ§ª Running unit tests..."
pnpm run test
if [ $? -ne 0 ]; then
    echo "âŒ Unit tests failed!"
    FAILED=1
else
    echo "âœ… Unit tests passed"
fi
echo ""

# 4. Run build
echo "ğŸ—ï¸  Running build..."
pnpm run build
if [ $? -ne 0 ]; then
    echo "âŒ Build failed!"
    FAILED=1
else
    echo "âœ… Build passed"
fi
echo ""

# Final result
if [ $FAILED -ne 0 ]; then
    echo "âŒ Pre-push checks failed! Please fix the issues before pushing."
    exit 1
fi

echo "ğŸ‰ All pre-push checks passed! Pushing..."
